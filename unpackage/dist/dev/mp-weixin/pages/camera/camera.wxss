
.camera-container {
  position: relative;
  height: 100vh;
  overflow: hidden;
}
.camera-preview {
  width: 100%;
  height: 100%;
}
.pose-reference {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 200rpx;
  height: 300rpx;
  border-radius: 20rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
}
.capture-btn {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}
.capture-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #f44;
}
